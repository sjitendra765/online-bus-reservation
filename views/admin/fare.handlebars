
<div class="col-sm-3"></div>
<div class="col-sm-6">
	<h1>Fares</h1>

	<table class = "table" ng-controller = "fareCntrl">
		<thead>
			<tr>
				<th>From</th>
				<th>To</th>
				<th>Amount(Non Ac)</th>	
				<th>Amount(Ac)</th>			
				<th>&nbsp;</th>
				<th>&nbsp;</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td><input class="form-control" ng-model = "c.from_dept"></td>
				<td><input class="form-control" ng-model = "c.to_dest"></td>
				<td><input class="form-control" ng-model = "c.amount"></td>
				<td><input class="form-control" ng-model = "c.amountac"></td>				
				<td><button class="btn btn-primary" ng-show="fareShow" ng-click="saveFare()">Save</button></td>
				<td><button class="btn btn-info" ng-hide="fareShow" ng-click="updateFare(c.id)">update</button></td>
			</tr>
			<tr ng-repeat="c in fareList">
				<td>{[{c.from_dept}]}</td>
				<td>{[{c.to_dest}]}</td>
				<td>{[{c.amount}]}</td>
				<td>{[{c.amountac}]}</td>				
				<td><button class="btn btn-primary" ng-click="editFare(c.id)">Edit</button></td>
				<td><button class="btn btn-info" ng-click="removeFare(c.id)">Remove</button></td>
			</tr>
		</tbody>
	</table>
</div>
<div class="col-sm-3"></div>